---
import NavItem from "./NavItem.astro";

const navtitle = [
    {
        title: "Home",
        url: "/"
    },
    {
        title: "Cats",
        url: "/cats"
    },
    {
        title: "Blogs",
        url: "/blog"
    }
]

---

<nav class="navbar">
    <div class="navbar">
    <span class="logo">
      Serphp
    </span>
    <div id="navbarExampleTransparentExample" class="navbar-menu">
    </div>
    </div>

    <div class="navbar-end">
        <div class="navbar-item">
          <div class="field is-grouped">
            <p class="control">
            {
                navtitle.map((item) => (<NavItem title={item.title} url={item.url}></NavItem>))
            }
            </p>


            <p class="control"></p>
              <p class="buttons">
                <button class="button">
                  <span class="icon">
                    <i class="fab fa-github"></i>
                  </span>
                  <span><a href="www.github.com/Serphp"> GitHub</a></span>
                </button>
            </p>
          </div>
        </div>
    </div>
</nav>

